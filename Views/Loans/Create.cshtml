@model Mom3._2.Models.Loan

@{
    ViewData["Title"] = "Create";
}

<h1 class="italic">Låna skiva</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label><br />
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FriendName" class="control-label"></label><br />
                <input asp-for="FriendName" class="form-control" />
                <span asp-validation-for="FriendName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanDate" class="control-label"></label><br />
                <input asp-for="LoanDate" class="form-control" />
                <span asp-validation-for="LoanDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Låna" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
